<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fetchdata">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/purple_200">

        <TextView
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:text="Hello Alfaj Welcome To the World of Pets"
            android:paddingRight="30.20dp"
            android:paddingStart="12dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginRight="53dp"
            android:paddingVertical="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/SettingButton"
            android:onClick="Visiable"

            android:src="@drawable/ic_baseline_settings_24"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="70mm"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pune"
            android:padding="16dp"
            android:paddingStart="12dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:paddingEnd="12dp"
            android:id="@+id/Location"
            android:onClick="CityList"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginHorizontal="9.5dp"
            android:background="@drawable/otpbutton"
            android:text="Community Box"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:gravity="center"
            android:onClick="backHomepage"
            android:text="Home"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="68mm"
            android:layout_height="match_parent"
            android:hint="Serach Pet Shops"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/searchbox"
            android:drawableLeft="@drawable/ic_baseline_search_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:textColor="#FF018786"
            android:paddingEnd="10dp"
            android:text="Pet shop in"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:text="Pune"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
</LinearLayout>